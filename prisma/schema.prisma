generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_NEW")
}

model User {
  name       String   @db.VarChar(100)
  email      String   @db.VarChar(100)
  password   String   @db.VarChar(255)
  create_at  DateTime @default(now())
  updated_at DateTime @updatedAt
  cpf        String   @db.VarChar(11)
  id         Int      @id @default(autoincrement())

  @@map("users")
}

model Psychologist {
  name             String   @db.VarChar(100)
  status           Status
  email            String   @db.VarChar(100)
  password         String   @db.VarChar(255)
  cellphone_number String   @db.VarChar(15)
  create_at        DateTime @default(now())
  updated_at       DateTime @updatedAt
  cpf              String   @db.VarChar(11)
  id               Int      @id @default(autoincrement())

  @@map("psychologist")
}

model Consultation {
  description       String   @db.VarChar(512)
  data_consultation DateTime
  create_at         DateTime @default(now())
  link_meets        String?  @db.VarChar(100)
  cpf_paciente      String   @db.VarChar(11)
  cpf_psychologist  String?  @db.VarChar(100)
  cpf_user          String   @db.VarChar(11)
  id                Int      @id @default(autoincrement())

  @@map("consultation")
}

model Report {
  data              DateTime
  report            String   @db.VarChar(3000)
  cellphone_number  String   @db.VarChar(15)
  cpf_psychologist  String   @db.VarChar(11)
  cpf_user          String   @db.VarChar(11)
  nome_psychologist String   @db.VarChar(100)
  id                Int      @id @default(autoincrement())
  name_child        String   @db.VarChar(100)
  cpf_child         String   @db.VarChar(11)

  @@map("report")
}

model Children {
  id                   Int    @id @default(autoincrement())
  cpf_crianca          String @db.VarChar(11)
  cpf_responsavel      String @db.VarChar(11)
  telefone_responsavel String @db.VarChar(11)
  nome_crianca         String @db.VarChar(100)

  @@map("children")
}

enum Status {
  disponivel
  ocupado
}
